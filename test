    }
    .remove-highlight-btn {
      position: absolute;
      top: -10px;
      left: -10px;
      background-color: red;
      color: white;
      font-size: 10px;
      width: 15px;
      height: 15px;
      text-align: center;
      border-radius: 50%;
      cursor: pointer;
    }
  `)
);
document.head.appendChild(styleElement);

let addTextButton = document.createElement("button");
addTextButton.textContent = "Add Text";
addTextButton.className = "dropdown-button";
dropdown.appendChild(addTextButton);

let addImageButton = document.createElement("button");
addImageButton.textContent = "Add Image";
addImageButton.className = "dropdown-button";
dropdown.appendChild(addImageButton);

let button3 = document.createElement("button");
button3.textContent = "Add Button";
button3.className = "dropdown-button";
dropdown.appendChild(button3);

let button4 = document.createElement("button");
button4.textContent = "Resized Button";
button4.className = "dropdown-button";
dropdown.appendChild(button4);

// Add thin square with ">" symbol next to the Resized Button
let toggleResizeButton = document.createElement("div");
toggleResizeButton.textContent = ">";
toggleResizeButton.style.cursor = "pointer";
toggleResizeButton.style.marginLeft = "5px";
toggleResizeButton.style.display = "inline-block";
toggleResizeButton.style.padding = "5px";
toggleResizeButton.style.backgroundColor = "lightgray";
toggleResizeButton.style.borderRadius = "3px";
container.appendChild(toggleResizeButton);

let shoutoutText = document.createElement("div");
shoutoutText.textContent = "Shoutout to AXOLOTL77";
shoutoutText.className = "shoutout-text";
dropdown.appendChild(shoutoutText);

let resizedModeActive = false;
let resizeTextModeActive = false;

// Function to alternate button colors
function alternateButtonColors(button) {
  let colors = ["red", "green"];
  let currentColorIndex = 0;
  setInterval(() => {
    button.style.backgroundColor = colors[currentColorIndex];
    currentColorIndex = (currentColorIndex + 1) % colors.length;
  }, 500);
}

alternateButtonColors(addTextButton);
alternateButtonColors(addImageButton);
alternateButtonColors(button3);
alternateButtonColors(button4);

// Toggle resize mode button
toggleResizeButton.addEventListener("click", () => {
  if (resizeTextModeActive) {
    button4.textContent = "Resized Button";
    resizeTextModeActive = false;
  } else {
    button4.textContent = "Resize Text";
    resizeTextModeActive = true;
  }
});

mainButton.addEventListener("click", () => {
  if (dropdown.style.maxHeight === "0px" || dropdown.style.maxHeight === "") {
    dropdown.style.maxHeight = "200px";
    dropdown.style.opacity = "1";
  } else {
    dropdown.style.maxHeight = "0";
    dropdown.style.opacity = "0";
  }
});

addTextButton.addEventListener("click", () => {
  let userInput = prompt("Enter the text to add:");
  if (userInput) {
    let newTextElement = document.createElement("div");
    newTextElement.textContent = userInput;
    newTextElement.className = "draggable";
    newTextElement.style.position = "absolute";
    newTextElement.style.left = "50%";
    newTextElement.style.top = "50%";
    newTextElement.style.transform = "translate(-50%, -50%)";
    document.body.appendChild(newTextElement);
    makeDraggable(newTextElement);
  }
});

// Rest of the code remains the same for adding buttons, resizing, and draggable functionality
